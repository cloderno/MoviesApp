<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.fragments.CharacterDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/img_character"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Morty Smith"/>
            <TextView
                android:id="@+id/tv_character_species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Species: Human"/>
            <TextView
                android:id="@+id/tv_character_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Alive"/>
            <TextView
                android:id="@+id/tv_character_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"/>

            <TextView
                android:id="@+id/tv_character_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origin: Earth"/>

            <TextView
                android:id="@+id/tv_character_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Earth"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_button"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/midnight"
            android:src="@drawable/ic_heart_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp" />


        <include
            android:id="@+id/progress_bar"
            android:visibility="gone"
            layout="@layout/loading_indicator"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>